<h1>All Your Contacts</h1>

<% @contacts.each do |contact| %>
  <div class="lead">
    <%= link_to contact.name, contact_path(contact) %> <%= link_to "Edit", edit_contact_path(contact) %> |
                        <%= link_to "Delete", contact_path(contact),
                                            :data => { :confirm => "Are you sure",
                                                        :method => "delete"} %>
  </div>
<% end %>

